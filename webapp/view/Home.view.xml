<mvc:View
    controllerName="com.bootcamp.sapui5.finalproject.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    height="100%"
    xmlns:f="sap.f"
    xmlns:mdc="sap.ui.mdc"
    xmlns:mdct="sap.ui.mdc.table"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:smartTable="sap.ui.comp.smarttable"
>
    <m:Page
        showHeader="false"
        enableScrolling="false"
        class="sapUiContentPadding"
    >

        <core:Fragment
            fragmentName="com.bootcamp.sapui5.finalproject.view.fragments.FiltersBar"
            type="XML"
        />

        <core:Fragment
            fragmentName="com.bootcamp.sapui5.finalproject.view.fragments.SuppliersTable"
            type="XML"
        />
    </m:Page>
</mvc:View>

