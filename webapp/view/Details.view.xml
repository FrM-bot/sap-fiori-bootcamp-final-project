<mvc:View
    controllerName="com.bootcamp.sapui5.finalproject.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <Page
        id="pageDetail"
    >
        <Toolbar>
            <Button type="Back" press="onNavBack" />
            <Title text="{CompanyName}" level="H2" />
        </Toolbar>
        <!-- Supplier Details Form -->
        <core:Fragment
            fragmentName="com.bootcamp.sapui5.finalproject.view.fragments.FormSupplierDetails"
            type="XML"
        />
        <!-- Button for new  Product -->
        <Button
            id="newProductButton"
            text="New Product"
            press="onOpenNewProductModal"
            visible="{= ${viewModel>/isEditable} &amp;&amp; ${viewModel>/isNewProduct} }"
        />
        <!-- Products Table -->
        <core:Fragment
            fragmentName="com.bootcamp.sapui5.finalproject.view.fragments.ProductsTable"
            type="XML"
        />
    </Page>
</mvc:View>