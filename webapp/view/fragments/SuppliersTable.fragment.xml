<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    controllerName="com.bootcamp.sapui5.finalproject.controller.Home"
    xmlns="sap.ui.table"
>
    <Table
        id="suppliersTable"
        selectionMode="None"
        rows="{/Suppliers}"
        sort="sortDeliveryDate"
        ariaLabelledBy="title"
    >
        <extension>
            <m:OverflowToolbar style="Clear">
                <m:Title
                    id="title"
                    text="Suppliers"
                />
                <m:ToolbarSpacer />
                <m:Button
                    icon="sap-icon://decline"
                    tooltip="Clear all sortings"
                    press="clearAllSortings"
                />
            </m:OverflowToolbar>
        </extension>
        <columns>
            <Column
                width="11rem"
                showSortMenuEntry="true"
                sortProperty="SupplierID"
            >
                <m:Label text="Supplier ID" />
                <template>
                    <m:Text text="{SupplierID}" wrapping="false" />
                </template>
            </Column>

            <Column
                width="11rem"
                showSortMenuEntry="true"
                sortProperty="CompanyName"
            >
                <m:Label text="Company Name" />
                <template>
                    <m:Text
                        text="{CompanyName}"
                        wrapping="false"
                    />
                </template>
            </Column>

            <Column
                width="15rem"
                showSortMenuEntry="true"
                sortProperty="ContactName"
            >
                <m:Label text="Contact Name" />
                <template>
                    <m:Text
                        text="{ContactName}"
                        wrapping="false"
                    />
                </template>
            </Column>

            <Column
                width="11rem"
                showSortMenuEntry="true"
                sortProperty="ContactTitle"
            >
                <m:Label text="Contact title" />
                <template>
                    <m:Text
                        text="{ContactTitle}"
                        wrapping="false"
                    />
                </template>
            </Column>

            <Column
                width="11rem"
                showSortMenuEntry="true"
                sortProperty="Country"
            >
                <m:Label text="Country" />
                <template>
                    <m:Text
                        text="{Country}"
                        wrapping="false"
                    />
                </template>
            </Column>

            <Column
                width="11rem"
                showSortMenuEntry="true"
                sortProperty="City"
            >
                <m:Label text="City" />
                <template>
                    <m:Text
                        text="{City}"
                        wrapping="false"
                    />
                </template>
            </Column>

            <Column
                width="15rem"
                showSortMenuEntry="true"
                sortProperty="Address"
            >
                <m:Label text="Address" />
                <template>
                    <m:Text
                        text="{Address}"
                        wrapping="false"
                    />
                </template>
            </Column>

            <Column
                width="11rem"
                showSortMenuEntry="true"
                sortProperty="PostalCode"
            >
                <m:Label text="Postal code" />
                <template>
                    <m:Text
                        text="{PostalCode}"
                        wrapping="false"
                    />
                </template>
            </Column>

            <Column
                width="11rem"
                showSortMenuEntry="false"
                sortProperty="Phone"
            >
                <m:Label text="Phone" />
                <template>
                    <m:Text
                        text="{Phone}"
                        wrapping="false"
                    />
                </template>
            </Column>
        </columns>
    </Table>
</core:FragmentDefinition>