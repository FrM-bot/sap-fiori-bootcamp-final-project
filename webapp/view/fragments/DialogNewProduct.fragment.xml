<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="dialogNewProduct"
        title="Create New Product"
        contentWidth="30rem">
        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout">
            <f:content>
                <Label text="Product ID" />
                <Input value="{NewProduct>/ProductID}" enabled="false" />

                <Label text="Product Name" />
                <Input value="{NewProduct>/ProductName}" />

                <Label text="Unit Price" />
                <Input value="{NewProduct>/UnitPrice}" type="Number" />

                <Label text="Units In Stock" />
                <Input value="{NewProduct>/UnitsInStock}" type="Number" />

                <Label text="Quantity Per Unit" />
                <Input value="{NewProduct>/QuantityPerUnit}" />

                <Label text="Discontinued" />
                <CheckBox selected="{NewProduct>/Discontinued}" />
                
                <Label text="Category" />
                <Select
                    forceSelection="false"
                    selectedKey="{NewProduct>/CategoryID}"
                    items="{
						path: 'Categories>/',
						sorter: { path: 'CategoryName' }
					}">
                    <core:Item key="{Categories>CategoryID}" text="{Categories>CategoryName}" />
                </Select>
            </f:content>
        </f:SimpleForm>
        <buttons>
            <Button
                text="Save"
                type="Emphasized"
                press="onSaveNewProduct" />
            <Button
                text="Cancel"
                press="onCancelNewProduct" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>