<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        id="NewItemDialog"
        title="{DialogProduct>/ProductName}"
        icon="sap-icon://border"
        busy="false"
        busyIndicatorDelay="0"
        class="sapUiSizeCompact">
        <content>
            <core:Fragment
                fragmentName="com.bootcamp.sapui5.finalproject.view.fragments.FormProductDetails"
                type="XML"
            />
        </content>
        <footer>
            <Toolbar>
                <Button text="Close" press="_closeDialog" />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>