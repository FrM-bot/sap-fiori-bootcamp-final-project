    <Table
        id="table"
        selectionMode="None"
        rows="{Products}"
        sort="sortDeliveryDate"
        rowActionCount="1"
        ariaLabelledBy="title">
        <extension>
            <m:OverflowToolbar style="Clear">
                <m:Title id="title" text="Products" />
                <m:ToolbarSpacer />
                <!-- Button for new  Product -->
                <m:Button
                    id="newProductButton"
                    text="New Product"
                    press="onOpenNewProductModal"
                    visible="{= ${viewModel>/isEditable} &amp;&amp; ${viewModel>/isNewProduct} }"
                />
            </m:OverflowToolbar>
        </extension>
        <columns>
            <Column
                id="productId"
                width="6rem"
                sortProperty="ProductID">
                <m:Label text="{i18n>ProductID}" />
                <template>
                    <m:Text text="{ProductID}" wrapping="false" />
                </template>
            </Column>
            <Column
                id="categoryName"
                width="6rem"
                sortProperty="CategoryName">
                <m:Label text="{i18n>CategoryName}" />
                <template>
                    <m:Text text="{Category/CategoryName}" wrapping="false" />
                </template>
            </Column>
            <Column
                id="name"
                width="11rem"
                sortProperty="ProductName">
                <m:Label text="{i18n>Product}" />
                <template>
                    <m:Text text="{ProductName}" wrapping="false" />
                </template>
            </Column>
            <Column
                id="unitPrice"
                width="8rem"
                hAlign="End"
                sortProperty="UnitPrice">
                <m:Label text="{i18n>UnitPrice}" />
                <template>
                    <m:ObjectNumber
                        number="{
                            parts:[{path:'UnitPrice'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: true}
                        }"
                        unit="USD"
                    />
                </template>
            </Column>
            <Column
                id="unitsInStock"
                width="8rem"
                hAlign="End"
                sortProperty="UnitsInStock">
                <m:Label text="{i18n>UnitsInStock}" />
                <template>
                    <m:Text text="{UnitsInStock}" wrapping="false" />
                </template>
            </Column>
            <Column
                id="quantityPerUnit"
                width="9rem"
                sortProperty="QuantityPerUnit">
                <m:Label text="{i18n>QuantityPerUnit}" />
                <template>
                    <m:Text text="{QuantityPerUnit}" wrapping="false" />
                </template>
            </Column>
        </columns>
        <rowActionTemplate>
            <RowAction>
                <items>
                    <RowActionItem
                        type="Navigation"
                        press="onOpenPopoverDialog"
                    />
                </items>
            </RowAction>
        </rowActionTemplate>
    </Table>
</core:FragmentDefinition>